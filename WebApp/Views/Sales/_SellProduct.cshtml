@model Product
<div class="text-danger" asp-validation-summary="All"></div>
<div class="form-group mt-2">
    <label asp-for="Name"></label>
    <input class="form-control" asp-for="Name" type="text" readonly />
</div>
<div class="form-group mt-2">
    <label asp-for="Price"></label>
    <input class="form-control" id="price" type="text" readonly value="@(string.Format("{0:N2}€", Model.Price))" min="1" />

</div>